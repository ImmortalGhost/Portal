<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">  jdbc:mysql://localhost:8081/letichatdb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.show_sql">true</property>    <!-- enable Hibernate's automatic session context management -->
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.connection.pool_size">500</property>
        <mapping class="ru.epam.university_portal.model.entity.Group"></mapping>
        <mapping class="ru.epam.university_portal.model.entity.GroupAndTeacher"></mapping>
        <mapping class="ru.epam.university_portal.model.entity.Messages1To1"></mapping>
        <mapping class="ru.epam.university_portal.model.entity.MessagesFromNews"></mapping>
        <mapping class="ru.epam.university_portal.model.entity.News"></mapping>
        <mapping class="ru.epam.university_portal.model.entity.Post"></mapping>
        <mapping class="ru.epam.university_portal.model.entity.Role"></mapping>
        <mapping class="ru.epam.university_portal.model.entity.Student"></mapping>
        <mapping class="ru.epam.university_portal.model.entity.Teacher"></mapping>
        <mapping class="ru.epam.university_portal.model.entity.User"></mapping>
    </session-factory>
</hibernate-configuration>